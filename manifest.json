{
    "name" : "Disinfo-Busters",
    "version" : "1.0",
    "manifest_version" : 2,
    "description": "Desinfo-Buster: Protecting you against disinformation!",
    "content_scripts" : [
        {
            "matches" : ["<all_urls>"],
            "js" : ["content.js"]
        }
    ],
    "browser_action" : {
        "default_title" : "Disinfo-Busters",
        "default_icon": {
            "16": "images/logo_16.png",
            "32": "images/logo_32.png",
            "48": "images/logo_48.png",
            "128": "images/logo_128.png"
        }
    },
    "background" : {
        "scripts" : ["background.js"],
        "persistent": false
    },
    "permissions" : [
        "tabs",
        "storage",
        "declarativeContent"
    ],
    "icons": {
        "16": "images/logo_16.png",
        "32": "images/logo_32.png",
        "48": "images/logo_48.png",
        "128": "images/logo_128.png"
    }
}